<!DOCTYPE html>
<html>
  <head>
    <title>Manga</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
  <header>
    <nav class = "navbar navbar-expand-lg navbar-dark bg-secondary">
     <div class = "container">
      <a class="navbar-brand" href="/">マンガforU</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class = "navbar-nav ml-auto">
         <% if user_signed_in? %>
          <li class="nav-item nav-link text-light">
             <i class="fas fa-home"></i><%= link_to "マイページ", user_path(current_user.id), class: 'text-light' %>
          </li>
          <li class="nav-item nav-link text-light">
             <i class="fa fa-clipboard" aria-hidden="true"></i><%= link_to "投稿する", new_comic_path, class: 'text-light' %>
          </li>
          <li class="nav-item nav-link text-light">
            <i class="fas fa-book-open"></i><%= link_to "マンガ一覧", comics_path, class: 'text-light' %>
          </li>
          <li class="nav-item nav-link text-light">
            <i class="fas fa-sign-out-alt"></i><%= link_to "ログアウト", destroy_user_session_path, class: 'text-light', method: :delete %>
          </li>
         <% else %>
          <li class="nav-item nav-link text-light">
             <i class="fas fa-home"></i><%= link_to "トップページ", root_path, class: 'text-light' %>
          </li>
          <li class="nav-item nav-link text-light">
             <i class="fas fa-user-plus"></i><%= link_to "新規登録", new_user_registration_path, class: 'text-light' %>
          </li> 
          <li  class="nav-item nav-link text-light">
            <i class="fas fa-sign-in-alt"></i><%= link_to "ログイン", new_user_session_path, class: 'text-light' %>
          </li>
         <% end %>
        </ul>
      </div>
     </div>
    </nav>
  </header>
  
  <body>
   
    <%= yield %>
  </body>
</html>
