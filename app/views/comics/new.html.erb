<% if @comic.errors.any? %>
  <%= @comic.errors.count %>件のエラーが発生しました
  <ul>
  <% @comic.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
<% end %>

<h1>投稿画面</h1>
<%= form_with model: @comic, local:true do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>画像</h4>
  <%= f.attachment_field :image %>
  <h4>内容紹介</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>

